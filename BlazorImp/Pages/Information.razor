@page "/information/{SessionId}"

@inject NavigationManager NavManager

<h3>@HeaderText</h3>

<p>@MainText</p>

<NavigationComponent NextURI="@($"/tutorial/{SessionId}")"/>

@code {
    [Parameter]
    public int CourseId { get; set; }

    [Parameter]
    public int TutorialId { get; set; }

    [Parameter]
    public string SessionId { get; set; }

    private string HeaderText { get; set; } = "Информационная страница";

    private string MainText { get; set; } = "Здесь указана полезная информация";
}
